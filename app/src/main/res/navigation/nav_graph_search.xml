<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_search"
    app:startDestination="@id/searchBarFragment">

    <fragment
        android:id="@+id/searchBarFragment"
        android:name="com.example.superherodex.SearchBarFragment"
        android:label="fragment_search_bar"
        tools:layout="@layout/fragment_search_bar"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_detail"
        >

        <action
            android:id="@+id/action_searchBarFragment_to_searchListFragment"
            app:destination="@id/searchListFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.example.superherodex.SearchListFragment"
        android:label="fragment_search_list"
        tools:layout="@layout/fragment_search_list"
        >

        <action
            android:id="@+id/action_searchListFragment_to_searchBarFragment"
            app:destination="@id/searchBarFragment" />
    </fragment>



</navigation>