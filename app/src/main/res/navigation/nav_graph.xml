<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/stopListFragment">

    <fragment
        android:id="@+id/stopListFragment"
        android:name="com.example.vancouver_transport.StopListFragment"
        android:label="fragment_stop_list"
        tools:layout="@layout/fragment_stop_list"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        >
        <action
            android:id="@+id/action_stopListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.vancouver_transport.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details"
        >
        <action
            android:id="@+id/action_detailsFragment_to_stopListFragment"
            app:destination="@id/stopListFragment" />
    </fragment>

</navigation>